<div class="titles">
  <h1> PAID </h1>
  <h6> A TOOL TO REPAY FRIENDS </h6>
</div>
<div class="new-bill-form">
  <div class="form-title">
    <%= "Share Calculator" %>
  </div>

  <%= simple_form_for [@group, @bill]  do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :amount %>
    <%= f.text_field :amount, placeholder: "0.00" %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit class: "info button" %>
  <% end %>
</div>
